<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.saran.input.FirstInputFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tf_namaPenulis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/namaPenulis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        app:startIconDrawable="@drawable/ic_bookmark_fill">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNamaPenulis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.ResepPedia.CTextField"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tf_namaResep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="@string/namaResep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_namaPenulis"
        android:layout_marginHorizontal="32dp"
        app:startIconDrawable="@drawable/ic_bookmark_fill">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNamaResep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.ResepPedia.CTextField"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tf_waktuMasak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="@string/waktuMasak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_namaResep"
        android:layout_marginHorizontal="32dp"
        app:startIconDrawable="@drawable/ic_bookmark_fill">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputWaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.ResepPedia.CTextField"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tf_porsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/porsi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_waktuMasak"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="32dp"
        app:startIconDrawable="@drawable/ic_bookmark_fill">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputPorsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.ResepPedia.CTextField"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginVertical="48dp"
        android:enabled="true"
        android:paddingVertical="12dp"
        android:text="Selanjutnya"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>